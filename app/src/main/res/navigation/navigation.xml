<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashScreen">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.adele.ui.main.MainActivity"
        tools:layout="@layout/activity_main"
        android:label="activity_main" />
    <fragment
        android:id="@+id/onBoardMainFragment"
        android:name="com.example.adele.ui.on_boarding.OnBoardingMainFragment"
        android:label="OnBoardMainFragment"
        tools:layout="@layout/page_on_boarding">
        <action
            android:id="@+id/action_onBoardMainFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left"
            app:popEnterAnim="@android:anim/slide_out_right"
            app:popExitAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/splashScreen"
        android:name="com.example.adele.splash.SplashFragment"
        tools:layout="@layout/activity_splash"
        android:label="activity_splash_screen">
        <action
            android:id="@+id/action_splashScreen2_to_onBoardMainFragment"
            app:destination="@id/onBoardMainFragment" />
        <action
            android:id="@+id/action_splashScreen2_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>

